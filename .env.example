# Environment Variables Template
# Copy this file to .env and fill in your values

# ===== BACKEND CONFIGURATION =====

# MongoDB Connection String
# Local: mongodb://localhost:27017/society-tracker
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/society-tracker
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/society-tracker

# Server Port
PORT=3000

# Environment
NODE_ENV=development

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=http://localhost:5173

# ===== OPTIONAL: EMAIL NOTIFICATIONS =====
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# ===== OPTIONAL: SMS NOTIFICATIONS (Twilio) =====
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ===== OPTIONAL: AWS S3 FOR IMAGE STORAGE =====
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=society-tracker-images
